{
  "name": "craftysoft-hooks",
  "version": "1.0.3",
  "description": "A lightweight collection of essential React hooks for modern web apps.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "craftysoft",
    "usehooks",
    "frontend"
  ],
  "author": "Md Shah Aman Patwary",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/react": "^18.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TAIJULAMAN/craftysoft-hooks.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
